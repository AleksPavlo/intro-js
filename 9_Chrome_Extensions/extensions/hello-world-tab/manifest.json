{
  "name": "Say Hello Tab!",
  "description": "Opens a popup and a tab that says hello!",
  "version": "1.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "MacCtrl+Shift+X"
      },
      "description": "Opens hello.html"
    }
  },
  "background": {
    "service_worker": "background.js"
  } 
}
